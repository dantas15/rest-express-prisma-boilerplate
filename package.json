{
  "name": "todo-ts-prisma-rest-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only src/server.ts",
    "typecheck": "tsc --noEmit",
    "migrate:run": "prisma migrate",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "dc:up": "docker compose up -d",
    "dc:build": "docker compose build",
    "dc:down": "docker compose down",
    "dc:restart": "docker compose restart",
    "dc:dev": "yarn dc:up && docker compose exec app bash",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.6.4",
    "@types/nodemailer": "^6.4.13",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "5.4.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4"
  }
}
